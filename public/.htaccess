<IfModule mod_rewrite.c>
    RewriteEngine On

    # Stop processing if the request is for a real file or directory
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d

    # Redirect everything else to index.php with the url parameter
    RewriteRule ^(.*)$ index.php?url=$1 [QSA,L]
</IfModule>